<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/textHome"
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/textHome"
        android:layout_marginTop="5dp"
        android:id="@+id/txtTotalAmount"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/txtTotalAmount"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txtTotalAmount"
        android:background="@color/black"
        android:id="@+id/sepLine1"/>

    <com.github.mikephil.charting.charts.PieChart
        android:layout_width="match_parent"
        android:layout_height="425dp"
        android:layout_below="@+id/sepLine1"
        android:id="@+id/example_Chart"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/example_Chart"
        android:background="@color/black"
        android:id="@+id/sepLine2"/>


</RelativeLayout>